{% extends "ProyBWebBundle::layout.html.twig" %}
{% block title %}State:List{% endblock %}

{% block body -%}
    <h1>States</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Description</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('state_show', { 'id': entity.id }) }}">{{ entity.description }}</a></td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('state_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('state_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('state_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
